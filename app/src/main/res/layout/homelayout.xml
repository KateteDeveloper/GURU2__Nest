<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <!-- 상단 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF7043"
        android:padding="16dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="315dp"
            android:layout_height="63dp"
            android:src="@drawable/nest" />

        <TextView
            android:id="@+id/teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_marginLeft="14dp"
            android:text="팀명"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/nicknameContainer"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"

            android:scrollbars="horizontal"
            android:gravity="start|center_vertical"
            android:layout_height="wrap_content">
            <!--친구 닉네임추가, 내 닉네임도... --></LinearLayout>

        <ImageButton
            android:id="@+id/plusNickname"
            android:layout_width="41dp"
            android:layout_height="47dp"
            android:layout_gravity="right"
            android:src="@drawable/btn_floating_main01" />


    </LinearLayout>
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

    <!-- 물품 섹션 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="물품"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginTop="20dp" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:textSize="11sp"
         android:text="     구매가 필요한 물품들이에요." />
 </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매해야 할 물품이 없어요"
        android:background="#E0E0E0"
        android:textSize="12sp"
        android:padding="16dp"
        android:textColor="#757575" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <!-- 메모 섹션 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="11sp"
        android:text="     룸메이트들과 집안일 관련 메모를 공유해 보세요" />
</LinearLayout>
    <EditText
        android:id="@+id/memoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="메모를 남겨 보세요"
        android:textSize="12sp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:id="@+id/saveMemo"
        android:background="@drawable/button_round"
        android:text="저장"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/white_box" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/homeImage"
            android:background="@android:color/transparent"
            android:src="@drawable/home_show"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="115dp"
            android:id="@+id/itemImage"
            android:background="@android:color/transparent"
            android:src="@drawable/thing_not_show" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="115dp"
            android:id="@+id/accountingImage"
            android:background="@android:color/transparent"
            android:src="@drawable/accounting_not_show" />

    </FrameLayout>


</LinearLayout>

    <!-- NavHostFragment 추가 오류로 중단.
     <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" /> -->

</LinearLayout>
